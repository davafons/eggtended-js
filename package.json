{
  "name": "eggtended-js",
  "version": "1.13.0",
  "description": "A extended version of the Egg programming language from the Eloquent Javascript book.",
  "main": "index.js",
  "bin": {
    "egg": "bin/egg.js"
  },
  "scripts": {
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "docs": "./node_modules/.bin/esdoc -c esdoc.json",
    "pre-commit-install": "pre-commit install"
  },
  "keywords": [
    "Egg",
    "Parser",
    "Interpreter",
    "Programming",
    "Language"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Dibad/eggtended-js"
  },
  "author": "David Afonso Dorta",
  "license": "GPL-3.0",
  "devDependencies": {
    "coveralls": "^3.0.5",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.16.0",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.1",
    "should": "^13.2.3",
    "sinon": "^7.3.1"
  },
  "dependencies": {
    "acorn": "^6.2.0",
    "ansi-styles": "^3.2.1",
    "commander": "^2.20.0",
    "estraverse": "^4.2.0",
    "xregexp": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --fix",
        "nyc mocha",
        "npm run docs --",
        "git add"
      ]
    },
    "ignore": [
      "**/docs/**/*.js"
    ]
  }
}
